{
	"editor.renderWhitespace": "all",
	"editor.renderControlCharacters": true,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	//
	"[powershell]": {
		"files.encoding": "utf8",
		"files.autoGuessEncoding": true,
		"files.eol": "\n",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[csharp]": {
		"files.encoding": "utf8",
		"files.autoGuessEncoding": true,
		"files.eol": "\n",
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	}
}